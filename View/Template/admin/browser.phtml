<?php

use Krystal\Grid\Grid;
use Krystal\Form\Element;
use Cms\View\Icon;

defined('KRYSTAL') or die;

?>

<div class="btn-toolbar">
	<div class="btn-group">
	  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
		<i class="glyphicon glyphicon-list"></i> <?php $this->show('Menu'); ?> <span class="caret"></span>
	  </button>
	  <ul class="dropdown-menu">
		 <li><a href="<?php echo $this->url('Banner:Admin:Banner@addAction'); ?>"><i class="glyphicon glyphicon-file"></i> <?php $this->show('Add new banner'); ?></a></li>
		 <li><a href="<?php echo $this->url('Banner:Admin:Category@addAction'); ?>"><i class="glyphicon glyphicon-file"></i> <?php $this->show('Add new category'); ?></a></li>
		 <li class="divider"></li>
		 <li class="dropdown-header"><?php $this->show('Actions'); ?></li>
		 
		 <?php if (!empty($banners)): ?>
		 <li><a href="#" data-button="remove-selected" data-url="<?php echo $this->url('Banner:Admin:Banner@deleteAction', null); ?>"><i class="glyphicon glyphicon-remove"></i> <?php $this->show('Remove selected'); ?></a></li>
		 <?php else: ?>
		 <li class="disabled"><a><i class="glyphicon glyphicon-remove"></i> <?php $this->show('Remove selected'); ?></a></li>
		 
		 <?php endif; ?>
	  </ul>
	</div>
</div>

<div class="row">
    <div class="col-lg-12">
        <?php $this->loadPartial('items-per-page', array('caption' => 'Latest banners')); ?>

        <form>
            <div class="table-responsive">
                <?= Grid::render($banners, array(
                    'pk' => 'id',
                    'batch' => true,
                    'tableClass' => 'table table-hover table-bordered table-striped table-condensed',
                    'rowAttributes' => array(
                        'class' => function($banner){
                            return $banner->getExpired() ? 'danger' : 'success';
                        }
                    ),

                    'columns' => array(
                        array(
                            'column' => 'url_path',
                            'label' => 'Preview',
                            'value' => function($banner){
                                if ($banner->isImage()) {
                                    return Element::image($banner->getUrlPath(), array('class' => 'img-responsive center-block'));
                                } else if ($banner->isFlash()) {
                                    return Element::object(400, 400, $banner->getUrlPath());
                                } else {
                                    // Unknown type
                                    return null;
                                }
                            }
                        ),

                        array(
                            'column' => 'name'
                        ),

                        array(
                            'column' => 'datetime',
                            'label' => 'Date and time of creation'
                        ),

                        array(
                            'column' => 'click_count',
                            'label' => 'Click count'
                        ),

                        array(
                            'column' => 'view_count',
                            'label' => 'Views'
                        ),
                        
                        array(
                            'column' => 'expiration_type_text',
                            'label' => 'Expiration type',
                            'translateable' => true
                        )
                    ),

                    'actions' => array(
                        'edit' => function($banner){
                            return Icon::edit(
                                $this->url('Banner:Admin:Banner@editAction', $banner->getId()),
                                $this->translate('Edit this banner')
                            );
                        },

                        'remove' => function($banner){
                            return Icon::remove(
                                $this->url('Banner:Admin:Banner@deleteAction', $banner->getId()),
                                $this->translate('Remove this banner')
                            );
                        }
                    )

                ), $this->translator); ?>
                
                <?php if (empty($banners)): ?>
                <div class="center-block">
                    <h2 class="text-center text-muted"><i class="glyphicon glyphicon-remove"></i> <?php $this->show('No banners'); ?></h2>
                </div>
                <?php endif; ?>
            </div>
        </form>

        <?php $this->loadPartial('paginator'); ?>
    </div>

    <div class="col-lg-12">
        <h2><?php $this->show('Categories'); ?> <small>(<?php echo count($categories); ?>)</small></h2>

        <?= Grid::render($categories, array(
            'tableClass' => 'table table-hover table-bordered table-striped table-condensed',
            'rowAttributes' => array(
                'class' => function($row) use ($categoryId){
                    return $row['id'] == $categoryId ? 'info' : null;
                }
            ),
            'columns' => array(
                array(
                    'column' => 'id',
                    'label' => '#'
                ),

                array(
                    'column' => 'name',
                    'value' => function($row){
                        return Element::link($row['name'],  $this->url('Banner:Admin:Banner@categoryAction', $row['id']));
                    }
                ),

                array(
                    'column' => 'banners_count',
                    'label' => 'Banners count'
                )
            ),

            'actions' => array(
                'edit' => function($row){
                    return Icon::edit(
                        $this->url('Banner:Admin:Category@editAction', $row['id']),
                        $this->translate('Edit this category')
                    );
                },

                'remove' => function($row){
                    return Icon::remove(
                        $this->url('Banner:Admin:Category@deleteAction', $row['id']),
                        $this->translate('Remove this category')
                    );
                }
            )

        ), $this->translator); ?>
        
        <?php if (empty($categories)): ?>
        <div class="center-block">
            <h2 class="text-center text-muted"><i class="glyphicon glyphicon-remove"></i> <?php $this->show('No categories'); ?></h2>
        </div>
        <?php endif; ?>
    </div>
</div>